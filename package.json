{
  "name": "vscode-chat",
  "displayName": "SAP AppStudio Chat UI",
  "description": "SAP AppStudio Chat UI",
  "version": "0.0.1",
  "author": "Alex",
  "publisher": "Hackaton",
  "engines": {
    "vscode": "^1.50.0"
  },
  "activationEvents": [
    "onView:contactsList"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "contactsList",
          "title": "SAP AppStudio Chat",
          "icon": "resources/chat.svg"
        }
      ],
      "panel": []
    },
    "menus": {
      "view/item/context": [
        {
          "command": "contactsList.openChat",
          "when": "view == contactsList && viewItem == contacts",
          "group": "inline"
        },
        {
          "command": "contactsList.openChannelChat",
          "when": "view == contactsList && viewItem == PacksDetails",
          "group": "inline"
        }
      ]
    },
    "views": {
      "contactsList": [
        {
          "id": "contactsList",
          "name": "SAP AppStudio Chat",
          "icon": "resources/chat.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "contactsList.openChat",
        "title": "Open Chat",
        "icon": {
          "light": "resources/openChat.svg",
          "dark": "resources/openChat.svg"
        }
      },
      {
        "command": "contactsList.openChannelChat",
        "title": "Open Channel Chat",
        "icon": {
          "light": "resources/openChat.svg",
          "dark": "resources/openChat.svg"
        }
      }
    ]
  },
  "main": "./out/extension.js",
  "scripts": {
    "compile": "tsc -p ./",
    "vscode:prepublish": "npm run compile",
		"build": "vsce package"
  },
  "dependencies": {
    "jsonc-parser": "^0.4.2",
    "ftp": "^0.3.10",
    "mkdirp": "^0.5.1",
    "rimraf": "^2.6.2",
    "minimist": "^0.2.1"
  },
  "devDependencies": {
    "@types/mkdirp": "^1.0.1",
    "@types/node": "^14.14.14",
    "@types/rimraf": "^3.0.0",
    "@types/vscode": "^1.50.0",
    "@typescript-eslint/eslint-plugin": "^3.0.2",
    "@typescript-eslint/parser": "^3.0.2",
    "eslint": "^7.1.0",
    "typescript": "^4.0.2",
    "vsce": "^1.61.0"
  }
}
